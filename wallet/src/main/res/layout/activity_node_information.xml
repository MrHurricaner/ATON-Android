<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.juzix.wallet.component.widget.CommonTitleBar
        android:id="@+id/commonTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ctb_left_drawable="@drawable/icon_back_black"
        app:ctb_title="@string/nodeInformation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1b2137">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_transation_list"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/icon_default_coin" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                style="@style/Text.fff.13"
                                android:ellipsize="end"
                                android:singleLine="true"
                                tools:text="节点名称" />

                            <TextView
                                android:id="@+id/tv_location"
                                style="@style/Text.c5cbdc.12"
                                android:ellipsize="end"
                                android:singleLine="true"
                                tools:text="(区域)" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/Text.7a8092.10"
                            android:layout_marginTop="2dp"
                            tools:text="@string/joinTime" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_candidate"
                        style="@style/Text.dc5151.10"
                        android:layout_marginLeft="12dp"
                        tools:text="@string/candidate" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_32394e" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text.7a8092.10"
                        android:layout_width="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/stakedRanking" />

                    <TextView
                        style="@style/Text.7a8092.10"
                        android:layout_width="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/staked_with_colon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_staked_ranking"
                        style="@style/Text.fff.13"
                        android:layout_width="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        tools:text="12" />

                    <TextView
                        android:id="@+id/tv_staked"
                        style="@style/Text.fff.13"
                        android:layout_width="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        tools:text="123,166.0465ATP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text.7a8092.10"
                        android:layout_width="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/tickets" />

                    <TextView
                        style="@style/Text.7a8092.10"
                        android:layout_width="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/ticketAge" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tickets"
                        style="@style/Text.fff.13"
                        android:layout_width="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        tools:text="1,532" />

                    <TextView
                        android:id="@+id/tv_ticket_age"
                        style="@style/Text.fff.13"
                        android:layout_width="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        tools:text="1,564Bs" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/Text.fff.14"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical|left"
                android:text="@string/nodeInfo" />

            <TextView
                style="@style/Text.c5cbdc.12"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="@string/nodeUrl" />

            <TextView
                android:id="@+id/tv_node_url"
                style="@style/Text.fff.13"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|left"
                tools:text="http://mainnet.abc.cn:10332" />

            <TextView
                style="@style/Text.c5cbdc.12"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="@string/nodeId" />

            <TextView
                android:id="@+id/tv_node_id"
                style="@style/Text.fff.13"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|left"
                tools:text="0xdE41ad9010ED7ae4a7bBc42b55665151dcc8DEf4dE41ad9010ED7ae4a7bBc42b55665151dcc8DEf4dE41ad9010ED7ae4a7bBc42b55665151dcc8DEf4dcc8DEf4" />

            <TextView
                style="@style/Text.c5cbdc.12"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="@string/reward_radio_with_colon_and_value" />

            <TextView
                android:id="@+id/tv_reward_radio"
                style="@style/Text.fff.13"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|left"
                tools:text="12%" />

            <TextView
                style="@style/Text.c5cbdc.12"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="@string/institutionalName" />

            <TextView
                android:id="@+id/tv_institutional_name"
                style="@style/Text.fff.13"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|left"
                tools:text="XXXXXXXXXXXXX" />

            <TextView
                style="@style/Text.c5cbdc.12"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="@string/institutionalWebsite" />

            <TextView
                android:id="@+id/tv_institutional_website"
                style="@style/Text.ffed54.13"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|left"
                tools:text="https://www.platon.network/#/index" />

            <TextView
                style="@style/Text.c5cbdc.12"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|left"
                android:text="@string/nodeIntroduction" />

            <TextView
                android:id="@+id/tv_node_introduction"
                style="@style/Text.fff.13"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|left"
                tools:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />

            <com.juzix.wallet.component.widget.RoundedTextView
                android:id="@+id/rtv_vote"
                style="@style/Text.1b2137.14"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:enabled="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/vote"
                android:textColor="@color/color_heavy_button_text"
                app:rtv_background_color="@color/bg_heavy_button"
                app:rtv_corner_radius="1dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
