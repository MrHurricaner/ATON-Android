<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/iv_community"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_wechat_community"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_community"
        style="@style/Text.000.16"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_community"
        app:layout_constraintLeft_toRightOf="@id/iv_community"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_community"
        tools:text="Telegram" />

    <LinearLayout
        android:id="@+id/layout_official_community"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_official_community"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="@id/tv_community"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_community" />


</android.support.constraint.ConstraintLayout>